@model List<Models.Team>
@{
    ViewBag.Title = "Teams";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><span class="glyphicon glyphicon-user"></span> Your Teams
</h2>
<hr/>
<div class="col-md-12">
    <div class="col-md-10"></div>
    <div class="col-md-2">
        <a class="btn btn-primary" href="@Url.Action("Create", "Team")"><span class="glyphicon glyphicon-plus"></span> Add New Team</a>
    </div>
</div>

<table class="table table-responsive table-striped table-condensed">
    <thead>
        <tr>
            <th>Team Name</th>
            <th>Team Members</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
            <td>@team.TeamName</td>
            <td></td>
            <td></td>
        </tr>
        }
    </tbody>

</table>